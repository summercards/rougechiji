.container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100vh;
  padding: 10px;
  font-family: Arial, sans-serif;
}

/* 玩家属性 */
.status {
  display: flex;
  justify-content: space-around;
  background-color: #f4f4f4;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.status-item {
  flex: 1;
  text-align: center;
  margin: 0 10px;
}

/* 游戏画面模块 */
.game-view {
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #ddd;
  background-color: #fff;
  margin: 10px 0;
  width: 800px;
  max-width: 100%;
  height: 150px;
  margin-left: auto;
  margin-right: auto;
}

.game-character {
  width: 100px;
  height: 100px;
  border-radius: 10px;
  border: 2px solid #ccc;
}

/* 信息模块 */
.info-box {
  border: 1px solid #ccc;
  padding: 10px;
  height: 60px;
  overflow: hidden;
  text-align: center;
  margin: 10px 0;
  background-color: #f9f9f9;
}

/* 武器和防弹衣信息 */
.equipment-info {
  display: flex;
  justify-content: space-between;
  background-color: #f4f4f4;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  margin-bottom: 10px;
}

.equipment-item {
  text-align: center;
  flex: 1;
}

.spacer {
  width: 20px;
}

/* 背包 */
.backpack {
  text-align: center;
  margin-bottom: 20px;
}

.grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 5px;
  justify-content: center;
  max-width: 35%; /* 背包范围缩小 */
  margin: 0 auto;
}

.grid-item {
  border: 1px solid #ccc;
  text-align: center;
  font-size: 12px;
  width: 30px; /* 缩小 50% */
  height: 30px; /* 缩小 50% */
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 操作按钮模块 */
.options {
  display: flex;
  justify-content: space-around;
  padding: 10px;
  background-color: #f9f9f9;
  border-top: 1px solid #ccc;
}

button {
  flex: 1;
  margin: 5px;
  padding: 10px;
  font-size: 16px;
  border: none;
  border-radius: 5px;
  color: white;
  cursor: pointer;
}

.accept-button {
  background-color: #4caf50; /* 绿色 */
}

.ignore-button {
  background-color: #f44336; /* 红色 */
}

.fight-button {
  background-color: #2196f3; /* 蓝色 */
}

.run-button {
  background-color: #ff9800; /* 橙色 */
}

.continue-button {
  background-color: #3f51b5; /* 紫色 */
}

.restart-button {
  background-color: #9e9e9e; /* 灰色 */
}
